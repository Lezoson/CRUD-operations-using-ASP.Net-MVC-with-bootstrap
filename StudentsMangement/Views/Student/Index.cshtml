@model IEnumerable<StudentDetails>

@{
    ViewData["Title"] = "Dashboard";
}



<h1>Welcome Students....</h1>

<form method="post" class="pb-3 pt-3">
    <div class="form-row d-flex justify-content-between">
        <div class="form-group">
            <a asp-action="Create" class="btn btn-outline-success ">Create New</a>
            </div>
        <div class="form-group">
            <div class="input-group">
                <input type="search" class="form-control rounded search" placeholder="Search" aria-label="Search" aria-describedby="search-addon" value="@ViewData[" Searching"]" name="search" />
                <button type="submit" class="btn btn-outline-primary" data-mdb-ripple-init>search</button>
            </div>
</div>
</div>
    </form>

</>

<table class="table table-hover table-bordered pb-2">
    <thead class="thead-dark">
       
        <tr>
            <th>
                <i class="bi bi-arrow-up-circle-fill"></i>
                @Html.ActionLink("FirstName", "Index", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), SortBy = "FirstName" })
            </th>
            <th>
                @Html.ActionLink("LastName", "Index", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), SortBy = "LastName"  })
            </th>
            <th>
                @Html.ActionLink("Email", "Index", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), SortBy = "Email" })
            </th>
            <th>
                @Html.ActionLink("PhoneNumber", "Index", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), SortBy = "PhoneNumber" })
                
            </th>
            <th>
                @Html.ActionLink("DateCreated", "Index", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), SortBy = "DateCreated" })

               
            </th>
         
            <th>
               
            </th>
        </tr>
        
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                   @item.FirstName
                </td>
                <td>
                    @item.LastName
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    @item.PhoneNumber
                </td>
               
                <td>
                    @item.DateCreated
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StudentID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.StudentID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.StudentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="row">
    <div class="col-md-12">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
        @{
            double totalpages = ViewBag.Totalpages;

            
            for (int i = 1; i <= totalpages;i++)
            {
               
                        @if(i==ViewBag.PageNumber)
                        {
                        <li class="page-item active">
                            @Html.ActionLink(i.ToString(), "Index", new { SortOrder = ViewBag.SortOrder ==null?"Asc":(ViewBag.SortOrder=="Asc"?"Desc":"Asc"), SortBy = ViewBag.SortBy==null?"FirstName":ViewBag.SortBy, PageNumber = i, }, new { @class = "page-link" })
                        </li>
                        }
                        else
                        {
                        <li class="page-item">
                                @Html.ActionLink(i.ToString(), "Index", new { SortOrder = "FirstName" , PageNumber = i, }, new { @class = "page-link" })
                            </li>
                        }
                
               
            }
            
        }
            </ul>
                
        </nav>
    </div>
</div>
